@model IEnumerable<WPCasusVictuz.Models.Poll>

@{
    ViewData["Title"] = "Alle polls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Overzicht vraagstellingen</h1>

<p>
    <a asp-action="Create">Maak een nieuwe poll aan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Vraagstelling
            </th>
            <th>
                Antwoord opties
            </th>
            <th>
                aangemaakt door
            </th>
            <th>Beheer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question) <!-- Display the Poll Question -->
                </td>
                <td>
                    @string.Join(", ", item.Options ?? new List<string>()) <!-- Direct Razor usage to handle Options -->
                </td>
                <td>
                    @(item.CreatedBy != null ? item.CreatedBy.Name : "N/A") <!-- Direct Razor expression for CreatedBy -->
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Wijzigen</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
