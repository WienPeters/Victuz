@model WPCasusVictuz.Models.Poll

@{
    ViewData["Title"] = "Aanmaken poll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creatie van een poll</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question" class="control-label">Vraagstelling</label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <h3>
                Voer de antwoorden in als bijvoorbeeld "ja,nee"
            </h3>
            <div class="form-group">
                <label asp-for="Options" class="control-label">Mogelijke antwoorden</label>
                <input asp-for="Options" class="form-control" />
                <span asp-validation-for="Options" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzichtlijst</a>
</div>

