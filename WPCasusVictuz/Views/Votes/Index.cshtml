@model IEnumerable<WPCasusVictuz.Models.Vote>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().SelectedOption) <!-- Display name for SelectedOption -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Poll.Question) <!-- Display name for Poll Question -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Member.Name) <!-- Display name for Member Name -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.SelectedOption) <!-- Display the selected option -->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poll.Question) <!-- Display the poll question -->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Name) <!-- Display the member's name -->
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
