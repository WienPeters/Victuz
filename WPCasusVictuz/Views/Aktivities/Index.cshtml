@model IEnumerable<WPCasusVictuz.Models.Aktivity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Activities</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number of Registrations</th>
            <th>Date of activity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Date</td>
                <td>@activity.Description</td>
                <td>@activity.Registrations.Count()</td>  <!-- Display the number of registrations -->
                <td><a asp-action="Details" asp-route-id="@activity.Id">Details</a> |</td>
            </tr>
        }
    </tbody>
</table>
