@model WPCasusVictuz.Models.Member

@{
    ViewData["Title"] = "Verwijdering lid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Weet je zeker dat je dit lid wilt verwijderen?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        
        <dt class = "col-sm-2">
            Staat lid
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar ledenlijst</a>
    </form>
</div>
