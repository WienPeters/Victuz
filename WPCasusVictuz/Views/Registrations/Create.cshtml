@model WPCasusVictuz.Models.Registration

@{
    ViewData["Title"] = "Register for Activity";
    
}

<h2>Register for @Model.Aktivity.Name</h2>

<form asp-action="RegisterForActivity" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="AktivityId" />
        <input type="hidden" asp-for="MemberId" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>

<a asp-action="Details" asp-route-id="@Model.AktivityId" class="btn btn-secondary">Back to Activity Details</a>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}